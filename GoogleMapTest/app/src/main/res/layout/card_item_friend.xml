<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        card_view:contentPadding="1dip"
        card_view:cardCornerRadius="2dip">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_friendAvatar"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_icon" />
                    <TextView
                        android:id="@+id/txt_friendUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuong V. Nguyen"
                        android:layout_gravity="center"
                        android:textSize="20dip"
                        android:layout_marginLeft="10dp"
                        android:textColor="#002aff" />
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_friendNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="389 friends"
                    android:textSize="16dip"
                    android:layout_marginTop="-5dip"
                    android:layout_marginLeft="60dip"
                    android:textColor="#000000"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/btnFriendDelete"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_delete" />
            <ImageView
                android:layout_alignTop="@+id/btnFriendDelete"
                android:layout_toStartOf="@+id/btnFriendDelete"
                android:id="@+id/btnFriendAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_input_add" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
