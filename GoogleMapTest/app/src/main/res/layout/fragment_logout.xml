<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context="com.hvngoc.googlemaptest.fragment.LogoutFragment">

    <android.support.v7.widget.CardView
        card_view:contentPadding="1dip"
        card_view:cardCornerRadius="2dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:text="@string/hint_sure_logout" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:scaleType="centerCrop"
                android:layout_width="100dip"
                android:id="@+id/img_logout_avatar"
                android:layout_height="100dip"
                android:src="@drawable/ic_profile" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:id="@+id/txt_logout_name"
                android:text="Name here!!!"
                android:textColor="#001eff" />
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btn_logout_logout"
                android:layout_height="wrap_content"
                android:text="@string/hint_logout"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
