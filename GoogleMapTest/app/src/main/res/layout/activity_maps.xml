<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MapsActivity" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <fragment
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#aa9a9a">
            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/imageViewAllBoundings"
                android:src="@drawable/iconcloud"
                android:onClick="BtnAllBoundingClick" />
            <ImageView
                android:layout_toRightOf="@+id/imageViewAllBoundings"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:id="@+id/imageViewBtnMyLocation"
                android:src="@drawable/iconmylocation"
                android:onClick="BtnViewMyLocationClick" />
            <EditText
                android:layout_toLeftOf="@+id/imageViewBtnSearch"
                android:layout_toRightOf="@+id/imageViewBtnMyLocation"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dip"
                android:hint="type name here"
                android:layout_height="wrap_content"
                android:id="@+id/editTextSearch" />
            <ImageView
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/imageViewBtnSearch"
                android:layout_toLeftOf="@+id/imageViewbtnSetting"
                android:src="@drawable/iconsearch"
                android:onClick="BtnViewSearchClick" />
            <ImageView
                android:layout_width="50dip"
                android:layout_alignParentRight="true"
                android:layout_height="50dip"
                android:id="@+id/imageViewbtnSetting"
                android:src="@drawable/iconsetting"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
