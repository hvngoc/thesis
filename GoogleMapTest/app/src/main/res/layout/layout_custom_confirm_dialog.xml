<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6dip"
    android:background="@drawable/comment_bg_dialog"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/primary"
        android:text="@string/hint_confirm_again"
        android:textSize="18sp"
        android:textColor="@android:color/white" />
    <android.support.v7.widget.CardView
        android:layout_margin="2dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="1dip"
        card_view:cardCornerRadius="2dip">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/icon_logo"
                    android:layout_width="70dip"
                    android:layout_height="70dip" />
                <TextView
                    android:id="@+id/txtConfirm"
                    android:layout_marginStart="5dip"
                    android:textSize="18sp"
                    android:text="Are you sure for deleting this request?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/btn_setting_change"
                    android:layout_marginEnd="20dip"
                    android:layout_toStartOf="@+id/btn_setting_cancel"
                    android:text="@string/hint_ok"
                    android:textColor="@color/primary"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/btn_setting_cancel"
                    android:layout_marginEnd="16dip"
                    android:layout_alignParentEnd="true"
                    android:text="@string/hint_cancel"
                    android:textColor="@color/primary"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>