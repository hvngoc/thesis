<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_friend_list"
    tools:context="com.hvngoc.googlemaptest.fragment.FriendFindFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cardFindFriend"
        card_view:contentPadding="1dip"
        card_view:cardCornerRadius="2dip"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:text="May be you know this person?" />
            <ImageView
                android:layout_width="100dip"
                android:id="@+id/img_find_avatar"
                android:layout_height="100dip"
                android:src="@drawable/ic_profile"
                android:background="#030fff" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:id="@+id/txt_find_name"
                android:text="Name here!!!"
                android:textColor="#001eff" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/btnFindAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_input_add" />
                <TextView
                    android:layout_toEndOf="@+id/btnFindAdd"
                    android:layout_centerVertical="true"
                    android:text="ADD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1cbf29" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/friends_bar"
        android:paddingStart="10dip"
        android:paddingEnd="10dip"
        android:background="#088A85"
        android:layout_alignParentBottom="true"
        android:layout_height="50dip">
        <EditText
            android:id="@+id/editFriendSearch"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:hint="type email here."
            android:layout_toStartOf="@+id/btnFriendSearch"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/btnFriendSearch"
            android:layout_alignParentRight="true"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@android:drawable/ic_menu_search" />
    </RelativeLayout>
</RelativeLayout>
