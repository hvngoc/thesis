<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_friend_list"
    tools:context="com.hvngoc.googlemaptest.fragment.FriendFindFragment">
    <android.support.v7.widget.CardView
        android:layout_above="@+id/friends_bar"
        android:id="@+id/cardFindFriend"
        card_view:contentPadding="5dip"
        card_view:cardCornerRadius="2dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="@string/hint_find_friend" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="5dip"
                android:layout_width="100dip"
                android:id="@+id/img_find_avatar"
                android:layout_height="100dip"
                android:src="@drawable/ic_profile"/>
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/txt_find_name"
                android:text="Name here!!!"
                android:textColor="@color/primary_text" />
            <LinearLayout
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_friendNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="389"
                    android:textColor="@color/secondary_text"/>
                <TextView
                    android:layout_marginStart="5dip"
                    android:text="@string/hint_friend"
                    android:textColor="@color/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginStart="10dip"
                    android:id="@+id/txt_friendMutual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="39"
                    android:textColor="@color/secondary_text" />
                <TextView
                    android:layout_marginStart="5dip"
                    android:text="@string/hint_mutual_friend"
                    android:textColor="@color/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dip"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_add_Friend"
                    android:layout_width="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_add_black_24dp"
                    android:backgroundTint="@color/primary_text"
                    android:layout_height="24dp" />
                <TextView
                    android:id="@+id/txt_addFriend"
                    android:layout_marginTop="8dip"
                    android:text="@string/hint_add_friend"
                    android:textColor="@color/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginStart="5dip"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:backgroundTint="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_addMoreDetail"
                    android:layout_marginTop="8dip"
                    android:text="@string/hint_detail"
                    android:textColor="@color/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_above="@+id/friends_bar"
        android:id="@+id/cardFindNothing"
        card_view:contentPadding="5dip"
        android:visibility="gone"
        card_view:cardCornerRadius="2dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_Oops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="100sp"
                android:text="Oops!" />
            <TextView
                android:text="@string/hint_nothing_found"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/friends_bar"
        android:paddingStart="10dip"
        android:paddingEnd="10dip"
        android:layout_alignParentBottom="true"
        android:elevation="3dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editFriendSearch"
            android:layout_alignParentStart="true"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:hint="@string/hint_type_email"
            android:layout_toStartOf="@+id/btnFriendSearch"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/btnFriendSearch"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tint="@color/secondary_text"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:src="@drawable/ic_search_white_36dp" />
    </RelativeLayout>
</RelativeLayout>
