<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_above="@+id/postToolbar"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar" />

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_item"
                    android:elevation="2dp"
                    card_view:cardCornerRadius="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/avatar"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/default_icon" />
                                <TextView
                                    android:id="@+id/username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nguyễn Văn Tường"
                                    android:layout_gravity="center"
                                    android:textSize="15dip"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="#0400ff" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-7dip"
                            android:layout_marginLeft="42dip"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtFeeling"
                                android:text="feeling happy on"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtCommentDay"
                                android:layout_marginLeft="4dip"
                                android:text="27/02/2016"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:text="Default Text!!!"
                            android:layout_marginTop="10dp"
                            android:id="@+id/title"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                            <Button
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:id="@+id/btnLike"
                                android:background="@drawable/imglike"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="17"
                                android:id="@+id/txtNumLike"
                                android:layout_alignParentEnd="true"
                                android:textSize="20dp"
                                android:textColor="#fa2b2b" />
                            <Button
                                android:layout_width="32dp"
                                android:id="@+id/btnShare"
                                android:layout_height="32dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/imgshare"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/txtNumShared"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="33"
                                android:layout_alignParentEnd="true"
                                android:textSize="20dp"
                                android:textColor="#fa2b2b" />
                            <Button
                                android:id="@+id/btnComment"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/imgcomment"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="7"
                                android:layout_alignParentEnd="true"
                                android:id="@+id/txtNumComment"
                                android:textSize="20dp"
                                android:textColor="#fa2b2b" />
                        </LinearLayout>


                        <com.daimajia.slider.library.SliderLayout
                            android:id="@+id/slider"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            custom:pager_animation="Accordion"
                            custom:auto_cycle="true"
                            custom:indicator_visibility="visible"
                            custom:pager_animation_span="1100"
                            android:layout_height="240dp"/>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-60dip">
                            <TextView
                                android:id="@+id/txtAddressLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="50dip"
                                android:layout_marginBottom="5dip"
                                android:text="Ho Chi Minh City, Viet Nam."
                                android:textSize="15dip"
                                android:layout_gravity="right|bottom"
                                android:background="#e2e0e0"
                                android:alpha="0.8"
                                android:textColor="#0011fe" />
                            <ImageView
                                android:id="@+id/imgViewShowMap"
                                android:layout_width="50dip"
                                android:layout_height="50dip"
                                android:layout_gravity="bottom|end"
                                android:src="@drawable/iconshowmap" />
                        </FrameLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/postToolbar"
            android:layout_alignParentBottom="true"
            android:background="#088A85"
            android:orientation="horizontal"
            android:layout_height="50dip">

        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
