<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_item"
    android:elevation="2dp"
    card_view:cardCornerRadius="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/user_detail">
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/default_icon"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn Tường"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="#0004ff" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-7dip"
            android:layout_marginLeft="28dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="feeling happy on"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCommentDay"
                android:layout_marginLeft="4dip"
                android:text="27/02/2016"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/place_photo"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtAddressLocation"
                android:text="Ho Chi Minh City, Viet Nam."
                android:textSize="15dip"
                android:background="#e2e0e0"
                android:alpha="0.8"
                android:textColor="#0011fe"
                android:layout_alignBottom="@+id/place_photo"
                android:layout_alignRight="@+id/place_photo"
                android:layout_marginRight="5dip"
                android:layout_marginBottom="5dip"/>
            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="The most beautiful place in the world"
                android:layout_below="@+id/place_photo"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/imglike"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="17"
                android:layout_alignParentEnd="true"
                android:textSize="20dp"
                android:textColor="#fa2b2b" />
            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/imgshare"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="33"
                android:layout_alignParentEnd="true"
                android:textSize="20dp"
                android:textColor="#fa2b2b" />
            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/imgcomment"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="7"
                android:layout_alignParentEnd="true"
                android:textSize="20dp"
                android:textColor="#fa2b2b" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>