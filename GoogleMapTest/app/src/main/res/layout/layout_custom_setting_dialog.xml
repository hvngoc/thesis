<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="6dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/comment_bg_title"
        android:text="Setting"
        android:textSize="18sp"
        android:textColor="@android:color/white" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="2dip"
        card_view:cardCornerRadius="2dip">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/switchBackground"
                android:layout_width="match_parent"
                android:padding="8dip"
                android:text="Allow running in background"
                android:layout_height="wrap_content" />
            <Switch
                android:id="@+id/switchBackground"
                android:text="ON"
                android:padding="8dip"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:checked="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="1dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="2dip"
        card_view:cardCornerRadius="2dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:padding="8dip"
                android:text="Auto notify when you get near by post:"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textDistance"
                android:text="100m"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <SeekBar
                android:layout_width="match_parent"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:layout_gravity="center"
                android:id="@+id/seekBarDistance"
                android:max="9"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="1dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="2dip"
        card_view:cardCornerRadius="2dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:padding="8dip"
                android:text="Auto nofity your memory in the past:"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textYear"
                android:text="5 years"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <SeekBar
                android:layout_width="match_parent"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:layout_gravity="center"
                android:id="@+id/seekBarYear"
                android:max="9"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="1dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="2dip"
        card_view:cardCornerRadius="2dip">
        <LinearLayout
            android:padding="2dip"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:padding="8dip"
                android:text="Send your location for new post:"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textTimeLocation"
                android:text="10 seconds"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <SeekBar
                android:layout_width="match_parent"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:layout_gravity="center"
                android:id="@+id/seekBarTimeLocation"
                android:max="9"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/btn_setting_change"
                    android:layout_marginEnd="20dip"
                    android:layout_toStartOf="@+id/btn_setting_cancel"
                    android:text="CHANGE"
                    android:textColor="@color/primary"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/btn_setting_cancel"
                    android:layout_marginEnd="16dip"
                    android:layout_alignParentEnd="true"
                    android:text="CANCEL"
                    android:textColor="@color/primary"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>