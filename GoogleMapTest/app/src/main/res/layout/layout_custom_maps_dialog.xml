<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dip"
    android:layout_height="280dip"
    android:background="@drawable/curved_shape_dialog"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ngoc V. Hoang"
        android:id="@+id/txtDialogNameUser"
        android:textColor="#0015ff"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dip"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:id="@+id/imagViewDialog"
            android:src="@drawable/car2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="This is beautiful place!! ...."
            android:id="@+id/txtDialogDescription"
            android:textColor="#0015ff"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:background="#b7a8a8"
            android:alpha="0.8"
            android:gravity="center"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="#b7a8a8"
            android:alpha="0.8">
            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:id="@+id/iconDialogLike"
                android:src="@drawable/imglike" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="17"
                android:layout_alignParentEnd="true"
                android:textSize="20dp"
                android:textColor="#fa2b2b" />

            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginLeft="10dip"
                android:id="@+id/iconDialogComment"
                android:src="@drawable/imgcomment" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="11"
                android:layout_alignParentEnd="true"
                android:textSize="20dp"
                android:textColor="#fa2b2b" />

            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginLeft="10dip"
                android:id="@+id/iconDialogShare"
                android:src="@drawable/imgshare" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="7"
                android:layout_alignParentEnd="true"
                android:textSize="20dp"
                android:textColor="#fa2b2b" />

            <TextView
                android:layout_marginLeft="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="See More ..."
                android:textColor="#0015ff"
                android:textSize="@dimen/abc_action_bar_content_inset_material"
                android:id="@+id/txtDialogSeeMore" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
