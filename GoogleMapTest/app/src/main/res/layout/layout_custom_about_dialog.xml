<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="6dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/comment_bg_title"
        android:text="About"
        android:textSize="18sp"
        android:textColor="@android:color/white" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="2dip">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:padding="4dip"
                android:text="Author:"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="30dip"
                android:text="\u2022 \t Ngoc V. Hoang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="30dip"
                android:text="\u2022 \t Tuong V. Nguyen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="1dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="2dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:padding="8dip"
                android:text="Description: social network for enjoying our experience lifes."
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="1dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="2dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:padding="8dip"
                android:text="Version: 1.0.0"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="1dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="2dip">
        <LinearLayout
            android:padding="2dip"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:padding="4dip"
                android:text="More:"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="30dip"
                android:text="\u2022 \t We are computer science students in honors program 2012, faculty of Infomation technology, university of science - VNU HCMC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="30dip"
                android:text="\u2022 \t This application is our research product of bachelor thesis major in computer science."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="30dip"
                android:text="\u2022 \t Supervisor: Dr. Tien B. Dinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/btn_setting_cancel"
                    android:layout_marginEnd="16dip"
                    android:layout_alignParentEnd="true"
                    android:text="CLOSE"
                    android:textColor="@color/primary"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>