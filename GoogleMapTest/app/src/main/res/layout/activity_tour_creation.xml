<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <LinearLayout
        android:id="@+id/layoutCreatePost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">
        <EditText
            android:id="@+id/editTextCreatePost"
            android:padding="7dip"
            android:hint="@string/hint_on_mind"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="5"
            android:maxLines="8"
            android:gravity="top|start"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/primary_text"
            android:scrollHorizontally="false"
            android:scrollbars="vertical" />
        <android.support.v7.widget.CardView
            android:layout_marginTop="2dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginStart="8dip"
                    android:text="set distance for next destination"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/textDistance"
                    android:text="1km"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
                <SeekBar
                    android:layout_marginTop="-8dip"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dip"
                    android:layout_marginRight="40dip"
                    android:layout_gravity="center"
                    android:id="@+id/seekBarDistance"
                    android:max="19"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginTop="1dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginStart="8dip"
                    android:text="set time for next destination"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/textMinutes"
                    android:text="10 minutes"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
                <SeekBar
                    android:layout_marginTop="-8dip"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dip"
                    android:layout_marginRight="40dip"
                    android:layout_gravity="center"
                    android:id="@+id/seekBarMinutes"
                    android:max="9"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_marginTop="3dip"
            android:background="@color/Gray"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="start"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/btnCreatePostGetLocation"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_location_on_white_24dp" />
                <HorizontalScrollView
                    android:layout_toEndOf="@+id/btnCreatePostGetLocation"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtCreatePostLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Ho Chi Minh City"
                        android:textColor="@color/primary_text" />
                </HorizontalScrollView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnCreatePostOK"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dip"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done_white_24dp" />
    <fragment
        android:layout_below="@+id/layoutCreatePost"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/MapCreatePostMap"
        class ="com.google.android.gms.maps.SupportMapFragment" />
</RelativeLayout>
