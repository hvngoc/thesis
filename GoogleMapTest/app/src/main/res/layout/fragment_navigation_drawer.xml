<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <RelativeLayout
        android:id="@+id/nav_header_container"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:padding="10dip"
        android:background="@drawable/icon_drawer_header">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ic_profile_picture"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/ic_profile"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/nametxt"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngoc V. Hoang"
            android:textSize="20sp"
            android:layout_below="@+id/ic_profile_picture"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/nav_header_container"
        android:layout_width="match_parent"
        android:paddingBottom="10dip"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:id="@+id/card_nav_profile"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="10dip"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:tint="@color/Gray"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_account_box_black"/>
                    <TextView
                        android:id="@+id/navigation_profile"
                        android:text="@string/title_profile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_gravity="center"
                        android:padding="6dp"
                        android:textSize="16sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_nav_wall"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="10dip"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:tint="@color/Gray"
                        android:src="@drawable/ic_person_black"/>
                    <TextView
                        android:id="@+id/navigation_wall"
                        android:text="@string/title_wall"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dip"
                        android:padding="6dp"
                        android:textSize="16sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_nav_friends"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginStart="10dip"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:tint="@color/Gray"
                        android:src="@drawable/ic_friend_black"/>
                    <TextView
                        android:id="@+id/navigation_friend"
                        android:text="@string/title_friends"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dip"
                        android:padding="6dp"
                        android:layout_gravity="center"
                        android:textSize="16sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            <android.support.v7.widget.CardView
                android:id="@+id/card_nav_language"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/navigation_language"
                        android:text="@string/title_language"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dip"
                        android:padding="6dp"
                        android:textSize="16sp"
                        android:layout_gravity="center" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_nav_settings"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/navigation_setting"
                        android:text="@string/title_settings"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dip"
                        android:padding="6dp"
                        android:textSize="16sp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_nav_change_password"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/navigation_change_pass"
                        android:text="@string/title_change_pass_work"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dip"
                        android:padding="6dp"
                        android:textSize="16sp"
                        android:layout_gravity="center" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_nav_change_location"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/navigation_change_location"
                        android:text="@string/title_change_location"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dip"
                        android:padding="6dp"
                        android:textSize="16sp"
                        android:layout_gravity="center" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_nav_report"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/navigation_report"
                    android:text="@string/title_report"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dip"
                    android:padding="6dp"
                    android:textSize="16sp"
                    android:layout_gravity="center" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>