<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.hvngoc.googlemaptest.fragment.SettingsFragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="6dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            card_view:contentPadding="2dip"
            card_view:cardCornerRadius="2dip">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/switchBackground"
                    android:layout_width="match_parent"
                    android:padding="8dip"
                    android:text="Allow running in background"
                    android:layout_height="wrap_content" />
                <Switch
                    android:id="@+id/switchBackground"
                    android:text="ON"
                    android:padding="8dip"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginTop="2dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:contentPadding="2dip"
            card_view:cardCornerRadius="2dip">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:padding="8dip"
                    android:text="Auto notify when you get near by post:"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/textDistance"
                    android:text="100m"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dip"
                    android:layout_marginRight="40dip"
                    android:layout_gravity="center"
                    android:id="@+id/seekBarDistance"
                    android:max="9"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginTop="2dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:contentPadding="2dip"
            card_view:cardCornerRadius="2dip">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:padding="8dip"
                    android:text="Auto nofity your memory in the past:"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/textYear"
                    android:text="5 years"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dip"
                    android:layout_marginRight="40dip"
                    android:layout_gravity="center"
                    android:id="@+id/seekBarYear"
                    android:max="9"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginTop="2dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:contentPadding="2dip"
            card_view:cardCornerRadius="2dip">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:padding="8dip"
                    android:text="Send your location for new post:"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/textTimeLocation"
                    android:text="10 seconds"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dip"
                    android:layout_marginRight="40dip"
                    android:layout_gravity="center"
                    android:id="@+id/seekBarTimeLocation"
                    android:max="9"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            card_view:contentPadding="2dip"
            card_view:cardCornerRadius="2dip">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/switchChangePassword"
                    android:layout_width="match_parent"
                    android:padding="8dip"
                    android:text="Change your password"
                    android:layout_height="wrap_content" />
                <Switch
                    android:id="@+id/switchChangePassword"
                    android:text="OFF"
                    android:padding="8dip"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:checked="false"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            card_view:contentPadding="2dip"
            card_view:cardCornerRadius="2dip">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/switchLanguage"
                    android:layout_width="match_parent"
                    android:padding="8dip"
                    android:text="LANGUAGE"
                    android:layout_height="wrap_content" />
                <Switch
                    android:id="@+id/switchLanguage"
                    android:text="ON"
                    android:padding="8dip"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                card_view:contentPadding="2dip"
                card_view:cardCornerRadius="2dip">
                <TextView
                    android:text="CHANGE"
                    android:textColor="@color/primary"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>